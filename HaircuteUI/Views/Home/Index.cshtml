<script>
    $(document).ready(function () {

        // When the user switches to a tab
        $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
            var clickedTab = $(e.target); // e.g. #him-tab or #her-tab
            var targetPane = clickedTab.data('bs-target'); // "#him" or "#her"

            // Decide which category ID to load
            var catId = (clickedTab.attr('id') === 'him-tab') ? 1 : 2;

            // AJAX call to /Home/ServicesPartial?categoryId=...
            $.get('/Home/ServicesPartial', { categoryId: catId })
                .done(function (partialHtml) {
                    // Insert the partial into the correct pane
                    $(targetPane).html(partialHtml);
                })
                .fail(function () {
                    $(targetPane).html('<p>Error loading services.</p>');
                });
        });

        // Optionally auto-trigger the "Him" tab so user sees it on page load
        $('#him-tab').trigger('shown.bs.tab');
    });
</script>
