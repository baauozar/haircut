@model IEnumerable<HaircuteUI.UIViewModel.HaircutServicesUIViewModel>

<div class="row gy-5">
    @if (!Model.Any())
    {
        <div class="col-12">
            <p>No services found.</p>
        </div>
    }
    else
    {
        @foreach (var (service, index) in Model.Select((s, i) => (s, i)))
        {
            <!--
                Dynamically calculate the data-wow-delay
                e.g. 200ms for first item, 300ms for second, etc.
            -->
            var wowDelay = 200 + (index * 100);

            <div class="col-lg-3 col-md-6 col-sm-6 wow animate fadeInUp"
                 data-wow-delay="@($"{wowDelay}ms")"
                 data-wow-duration="1500ms">
                <div class="service-card">
                    <div class="service-image">
                        <a href="services-details.html">
                            <img src="@service.ImagePath" alt="@service.Title" />
                        </a>
                    </div>
                    <div class="service-content text-center">
                        <!-- Optional <ul> if you have bullet points to show -->
                        
                        <h5><a href="services-details.html">@service.Title</a></h5>
                        <p>@service.Description</p>

                        <a class="primary-btn1 details-btn" href="services-details.html">
                           Take An Appointment
                            <svg class="arrow" width="10" height="10" viewBox="0 0 10 10" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M1 9L9 1M9 1C7.22222 1.33333 3.33333 2 1 1M9 1C8.66667 2.66667 8 6.33333 9 9"
                                      stroke="#1E1E1E"
                                      stroke-width="1.5"
                                      stroke-linecap="round" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        }
    }
</div>
