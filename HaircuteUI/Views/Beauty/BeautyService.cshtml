<script>
    $(document).ready(function () {
        // ✅ Load Categories Partial
        function loadCategories() {
            $.get('/Beauty/GetBeautyCategoryItemsPartial')
                .done(function (partialHtml) {
                    $('#beauty-categories-container').html(partialHtml);

                    // Initialize Tab Events after Dynamic Load
                    initializeTabEvents();

                    // Auto-activate the first tab
                    const firstTab = $('div[data-bs-toggle="pill"]').first();
                    if (firstTab.length) {
                        firstTab.tab('show');
                    }
                })
                .fail(function () {
                    $('#beauty-categories-container').html('<p>Error loading categories. Please try again later.</p>');
                });
        }

        // ✅ Initialize Tab Event Listeners
        function initializeTabEvents() {
            $('div[data-bs-toggle="pill"]').on('shown.bs.tab', function (e) {
                var categoryId = $(e.target).data('category-id');
                var targetPane = $(e.target).data('bs-target');

                $(targetPane).html('<p>Loading services...</p>');

                $.get('/Beauty/GetBeautyItemsByCategory', { categoryId: categoryId })
                    .done(function (resp) {
                        if (resp.success) {
                            let html = `
                                <div class="treatment-menu-wrap">
                                    <div class="treatment-menu-title-area">
                                        <h4>Services</h4>
                                    </div>
                                    <div class="treatment-menu-table-area">
                                        <table class="eg-table2">
                                            <thead>
                                                <tr>
                                                    <th>EXPAND</th>
                                                    <th class="service">SERVICE NAME</th>
                                                    <th>DURATION</th>
                                                    <th>PRICE</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                `;
                            resp.data.forEach(item => {
                                html += `
                                        <tr>
                                            <td>
                                                <div class="expand-btn"><i class="bi bi-plus-lg"></i></div>
                                            </td>
                                            <td>
                                                <div class="service-area">
                                                    <h6>${item.serviceName}</h6>
                                                    <div class="service-content"><p>${item.description}</p></div>
                                                </div>
                                            </td>
                                            <td>${item.duration}</td>
                                            <td class="price">$${item.price}</td>
                                        </tr>
                                    `;
                            });

                            html += `
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                `;
                            $(targetPane).html(html);
                        } else {
                            $(targetPane).html(`<p>Error: ${resp.message}</p>`);
                        }
                    })
                    .fail(function () {
                        $(targetPane).html('<p>Error loading services. Please try again later.</p>');
                    });
            });
        }

        // ✅ Toggle Expand/Collapse in Table Rows
        $(document).on('click', '.expand-btn', function () {
            // Toggle active class on the button
            $(this).toggleClass('active');

            // Toggle service content visibility
            $(this).closest('tr').find('.service-content').toggleClass('active');

            // Toggle icon from plus to minus
            $(this).find('i').toggleClass('bi-plus-lg bi-dash-lg');
        });


        // ✅ Initial Load
        loadCategories();
    });
</script>
