@model IEnumerable<HaircuteUI.UIViewModel.BeautyCategoryUIViewModel>
@* index page *@
<div class="row gy-4 mb-50">
    @if (!Model.Any())
    {
        <div class="col-12">
            <p>No beauty categories found.</p>
        </div>
    }
    else
    {
        @foreach (var (cat, idx) in Model.Select((c, i) => (c, i)))
        {
            var wowDelay = 200 + (idx * 100);

            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 wow animate fadeInUp"
                 data-wow-delay="@($"{wowDelay}ms")"
                 data-wow-duration="1500ms">
                <div class="beauty-spa-service-card">
                    <div class="service-card-image">
                        <img src="@cat.ImagePath" alt="@cat.Name" />
                    </div>
                    <div class="service-card-content">
                        <span>@(idx + 1)</span>
                        <div class="card-content-bottom">
                            <h4>
                                <a href="#">
                                    @cat.Name
                                </a>
                            </h4>
                            <a class="primary-btn4" href="/beauty/beautyservice">
                                VIEW MENU
                                <svg class="arrow" width="10" height="10" viewBox="0 0 10 10"
                                     fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1 9L9 1M9 1C7.22222 1.33333 3.33333 2 1 1
                                            M9 1C8.66667 2.66667 8 6.33333 9 9"
                                          stroke="#1E1E1E" stroke-width="1.5"
                                          stroke-linecap="round" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
