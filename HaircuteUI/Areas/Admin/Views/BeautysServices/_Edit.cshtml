<div class="bootstrap-modal">
    <div class="modal fade bd-example-modal-lg-edit" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit beauty services Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">

                    <div class="form-validation">
                        <form class="needs-validation" id="BeautServicesEdit">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="Id" value="" id="editBeautyServicesId" />
                            <div class="row">
                                <!-- Question Field -->
                                <div class="col-md-6">
                                    <div class="mb-3 row">
                                        <label for="question" class="col-lg-4 col-form-label">
                                            Heading
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-8">
                                            <input type="text" id="editHeading" class="form-control" name="Heading" placeholder="Enter a heading" required>
                                            <div class="invalid-feedback">
                                                Heading Can't be empty
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3 row">
                                        <label for="answer1" class="col-lg-4 col-form-label">
                                            Sub Heading
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-8">
                                            <input type="text" class="form-control" name="SubHeading" id="editSubHeading" placeholder="Enter a Sub Heading" required>
                                            <div class="invalid-feedback">
                                                Sub Heading Can't be empty
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="mb-3 row">
                                        <label for="answer2" class="col-lg-4 col-form-label">
                                            Description
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-8">
                                            <input type="text" class="form-control" name="Description" id="editDescription" placeholder="Enter the Description" required>
                                            <div class="invalid-feedback">
                                                Description Can't be empty
                                            </div>
                                        </div>
                                    </div>
                                </div>



                                <div class="col-md-6">
                                    <div class="mb-3 row">
                                        <label class="col-lg-4 col-form-label">
                                            Beauty Item Category
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <select class="default-select wide form-control" name="BeautyServicesItemId" id="editBeautyserviceitemdata" required>
                                                <option value="">Please select</option> <!-- Default placeholder -->
                                            </select>
                                            <div class="invalid-feedback">
                                                Please select a valid Beauty item.
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <br />


                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Close</button>
                                <button id="btnEditBeautyServices" type="button" class="btn me-2 btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

